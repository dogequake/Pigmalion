@model Pigmalion.Models.Client

@{
    ViewData["Title"] = "Изменить";
}

<h1>Изменить значения</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdClient" />
            <div class="form-group">
                <label asp-for="Phonenum" class="control-label">Номер телефона: </label>
                <input asp-for="Phonenum" class="form-control" />
                <span asp-validation-for="Phonenum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="DateCreation" type="hidden" value="@DateTime.UtcNow" class="form-control" />
                <span asp-validation-for="DateCreation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appeal" class="control-label">Причина заявления: </label>
                <input asp-for="Appeal" class="form-control" />
                <span asp-validation-for="Appeal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idcountryclient" class="control-label">Выберите страну:  </label>
                <select asp-for="Idcountryclient" class="form-control" asp-items="ViewBag.Idcountryclient"></select>
                <span asp-validation-for="Idcountryclient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idregionclient" class="control-label">Выберите область: </label>
                <select asp-for="Idregionclient" class="form-control" asp-items="ViewBag.Idregionclient"></select>
                <span asp-validation-for="Idregionclient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idcityclient" class="control-label">Выберите город: </label>
                <select asp-for="Idcityclient" class="form-control" asp-items="ViewBag.Idcityclient"></select>
                <span asp-validation-for="Idcityclient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Iddirectionclient" class="control-label">Выберите, где вам помогут: </label>
                <select asp-for="Iddirectionclient" class="form-control" asp-items="ViewBag.Iddirectionclient"></select>
                <span asp-validation-for="Iddirectionclient" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Сохранить все это естество" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <br />
    <a asp-action="Index">Вернутся в аккаунт</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
