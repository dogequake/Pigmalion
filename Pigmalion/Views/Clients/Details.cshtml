@model Pigmalion.Models.Client

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Client</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Номер телефона
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phonenum)
        </dd>
        <dt class = "col-sm-2">
            Дата создания
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateCreation)
        </dd>
        <dt class = "col-sm-2">
            Причина обращения
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Appeal)
        </dd>
        <dt class = "col-sm-2">
            Страна
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdcountryclientNavigation.NameCountry)
        </dd>
        <dt class="col-sm-2">
            Регион
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdregionclientNavigation.NameRegion)
        </dd>
        <dt class="col-sm-2">
            Город
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdcityclientNavigation.NameCity)
        </dd>
        <dt class="col-sm-2">
            Где получать услуги
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IddirectionclientNavigation.NameDirection)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdClient">Edit</a> |
    <a asp-action="Index"></a>
</div>
