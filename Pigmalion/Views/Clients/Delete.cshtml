@model Pigmalion.Models.Client

@{
    ViewData["Title"] = "Удаление";
}

<h1>Удаление</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Номер телефона
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phonenum)
        </dd>
        <dt class="col-sm-2">
            Дата создания
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreation)
        </dd>
        <dt class="col-sm-2">
            Причина обращения
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appeal)
        </dd>
        <dt class="col-sm-2">
            Страна
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdcountryclientNavigation.NameCountry)
        </dd>
        <dt class="col-sm-2">
            Регион
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdregionclientNavigation.NameRegion)
        </dd>
        <dt class="col-sm-2">
            Город
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdcityclientNavigation.NameCity)
        </dd>
        <dt class="col-sm-2">
            Где получать услуги
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IddirectionclientNavigation.NameDirection)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdClient" />
        <input type="submit" value="Точно удалить?" class="btn btn-danger" /> |
    </form>
</div>
