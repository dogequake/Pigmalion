@model IEnumerable<Pigmalion.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Номер телефона:
            </th>
            <th>
                Причина подачи заявления
            </th>
            <th>
                Направление заявки:
            </th>
            <th>
                Страна:
            </th>
            <th>
                Регион:
            </th>
            <th>
                Город:
            </th>
            <th>
                Время создания заявления: 
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Phonenum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Appeal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IddirectionclientNavigation.NameDirection)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdcountryclientNavigation.NameCountry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdregionclientNavigation.NameRegion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdcityclientNavigation.NameCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreation)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdClient">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdClient">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdClient">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
